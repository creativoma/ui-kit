{
  "name": "@creativoma/ui-kit",
  "version": "0.1.6",
  "description": "Simple and beautiful UI components for React",
  "author": "creativoma",
  "license": "MIT",
  "homepage": "https://github.com/creativoma/ui-kit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creativoma/ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/creativoma/ui-kit/issues"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "vite",
    "tailwindcss"
  ],
  "private": false,
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && npx tsc --project tsconfig.build.json && vite build",
    "prepublishOnly": "npm run build",
    "prepublish": "npm publish --dry-run",
    "publish": "npm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tailwindcss": "^4.1.7",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
